package oopIntro;

public class Product {

	//class çaðýrýrken mutlaka bir constructor çalýþmalýdýr. Ayný anda iki adet constructor çaðrýlamaz.2
	public Product() {  // constructor  Class oluþtuðunda olmasý istenilen kod bloðu yazýlýr
 		System.out.println("constructor çalýþtý");
	}
	
	public Product(int id, String name, double unitPrice, String detail) {
	    this();
		this.id = id;  // this class taki prop larý verir
		this.name = name;
		this.unitPrice = unitPrice;
		this.detail = detail;
	}
	 // over loading - Aþýrý yüklenme. Birden fazla constructor oluþturma
	
	int id;
	String name;
	double unitPrice;
	String detail;
	
}
